{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "*.conf.ts"
  ]
}